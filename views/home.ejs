<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f7f9fa;
    }
    .card {
      margin-bottom: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border: none;
    }
    .card-title {
      color: #343a40;
      font-weight: bold;
    }
    .card-subtitle {
      font-size: 0.9rem;
      color: #6c757d;
    }
    .navbar-brand {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
    <div class="container">
      <a class="navbar-brand" href="#">My Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/create-blog">Create New Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-blogs">My Blogs</a>
          </li>
          <li class="nav-item">
            <form action="/logout" method="GET" style="display: inline;">
              <button type="submit" class="btn btn-link nav-link">Logout</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Blog Container -->
  <div class="container">
    <h1 class="text-center mb-4">Welcome to the Blog</h1>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <% blogs.forEach(blog => { %>
          <div class="card">
            <div class="card-body">
              <h6 class="card-subtitle mb-2"><%= blog.author.username %></h6>
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.content.substring(0, 150) %>...</p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
